.counter-container
    display flex
    flex-direction column
    align-items center
    justify-content space-around
    border-radius 10px
    box-shadow 0px 6px 6px rgba(0, 0, 0, 0.23)
    background-color: white

.counter-text
    color black
    font-size 6rem
    font-weight 400
    background-color rgba(0, 0, 0, 0)
    
.counter-button
    width 95%
    height 15%

.counter-button--rounding
    border-color #868f96
    border-width 1px
    border-radius 25px
    border-style solid

.counter-button--gradient
    width 100%
    height 100%
    border-radius 25px
    flex-direction column
    align-items center
    justify-content center

.counter-button--text
    color #868f96
    font-size 2rem
    font-weight 200
    text-align center
    margin 0
    background-color rgba(0, 0, 0, 0)

.counter-container
    display flex
    flex-direction column
    align-items center
    justify-content space-around
    width 75%
    height 40%
    border-radius 10px
    box-shadow 0px 6px 6px rgba(0, 0, 0, 0.23)

.counter-text
    color black
    font-size 6rem
    font-weight 400
    
.counter-button
    width 95%
    height 15%

.counter-button--rounding
    border-radius 25px
    border-color #868f96
    border-width 1px
    border-style solid

.counter-button--gradient
    width 100%
    height 100%
    border-radius 25px
    flex-direction column
    justify-content center

.counter-button--text
    color #868f96
    font-size 2rem
    font-weight 200
    text-align center
